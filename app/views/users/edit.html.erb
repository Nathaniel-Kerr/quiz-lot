<h1>Edit Account</h1>
<h3><%= link_to "Home Page", user_path(@user) %><br></h3>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :email %>
    <%= f.text_field :email %><br>
    
    <%= f.label :password  %>
    <%= f.password_field :password %><br>

    <%= f.label :password_confirmation  %>
    <%= f.password_field :password_confirmation %><br>

    <%= f.submit %><br>
    <%= link_to 'delete account', current_user, method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
<% end %>
    